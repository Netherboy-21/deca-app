<h1>Log a transaction</h1>

<%= form_with model: [ @user, @user.app_transactions.build ] do |form| %>
  <div>
    <%= form.label :summary %><br>
    <%= form.text_field :summary %>
  </div>
  <div>
    <%= form.label :details %><br>
    <%= form.textarea :details %>
  </div>
  <div>
    <%= form.label :amount %><br>
    <%= form.number_field :amount %>
  </div>
  <div>
    <%= form.label :category %><br>
    <%= form.text_field :category %>
  </div>
  <div>
    <%= form.label :date %><br>
    <%= form.date_field :date %>
  </div>
  <div>
    <input type="submit" name="commit" value="Save transaction" data-disable-with="Save transaction">
  </div>
<% end %>